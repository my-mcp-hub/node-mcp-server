{
  "tabWidth": 2,
  "printWidth": 120,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "endOfLine": "lf",
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": ["**/*.{js,mjs,cjs,jsx}"],
      "options": {
        "plugins": ["@prettier/plugin-oxc"],
        "parser": "oxc"
      }
    },
    {
      "files": ["**/*.{ts,mts,cts,tsx}"],
      "options": {
        "plugins": ["@prettier/plugin-oxc"],
        "parser": "oxc-ts"
      }
    }
  ]
}
